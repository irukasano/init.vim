{
    "diagnostic-languageserver.mergeConfig": true,
    "diagnostic-languageserver.filetypes": {
        "php": ["phpstan"]
    },
    "diagnostic-languageserver.linters": {
        "phpstan": {
            "command": "/home/user/.config/composer/vendor/bin/phpstan",
            "args": [ "analyze", "--level", "1", "--autoload-file", "./vendor/autoload.php", "--error-format", "raw", "--no-progress", "%file" ]
        }
    },
    "snippets.userSnippetsDirectory": "~/.config/nvim/data/snippets"
}
